{
	"compilerOptions": {
		"target": "ES2023",
		"module": "ESNext",
		"strict": true,
		"esModuleInterop": true,
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"strictPropertyInitialization": false,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true
	},
	"include": [
		"src/**/*",
		"prisma/**/*",
		"prisma.config.ts"
	],
	"exclude": [
		"node_modules"
	]
}